<%- model_class = AutomatedTest -%>
<div class="page-header">
  <h1><%=t '.title', :default => AutomatedTest %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:type) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @automated_tests.each do |automated_test| %>
      <tr>
        <td><%= automated_test.id %></td>
        <td><%= automated_test.title %></td>
        <td><%= automated_test.type %></td>
        <td><%= automated_test.description %></td>
        <td><%=l automated_test.created_at, format: :long %></td>
        <td>
          <%= link_to automated_test_path(automated_test), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to automated_test_path(automated_test), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_automated_test_path,
            :class => 'btn btn-primary' %>
