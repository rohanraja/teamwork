<h1>Listing automated_tests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Type</th>
      <th>Description</th>
      <th>Component</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @automated_tests.each do |automated_test| %>
      <tr>
        <td><%= automated_test.title %></td>
        <td><%= automated_test.type %></td>
        <td><%= automated_test.description %></td>
        <td><%= automated_test.component %></td>
        <td><%= link_to 'Show', automated_test %></td>
        <td><%= link_to 'Edit', edit_automated_test_path(automated_test) %></td>
        <td><%= link_to 'Destroy', automated_test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Automated test', new_automated_test_path %>
